# Set default screen character to C-T (unused)
escape ""

# fix colors
term screen-256color

# disable startup message
startup_message off

# allow proper function of esc-key
maptimeout 0

# Show statusbar
hardstatus alwayslastline "%{+d .}%-w%{-d .}%{wR}%n %t%{-b dd}%{+d .}%+w"

# Startup programs
screen -t emacs emacs -nw
screen -t term

# Bindings
bind m screen -t mail mutt
